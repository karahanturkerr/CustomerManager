@using CustomerManager.Entities.Enums
@model List<CustomerManager.Entities.Models.Customer>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Gösterilecek müşteri bulunamadı.</div>
}
else
{
    <table id="customerTable" class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Doğum Tarihi</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Cinsiyet</th>
                <th>Kayıt Tarihi</th>
                <th>Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.BirthDate.ToString("dd.MM.yyyy")</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@(customer.Gender == eGender.Erkek ? "Erkek" : "Kadın")</td>
                    <td>@customer.CreatedTime.ToString("dd.MM.yyyy")</td>
                    <td>@(customer.IsDeleted ? "❌ Pasif" : "✅ Aktif")</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-1" onclick="editCustomer(@customer.Id)">
                            <i class="bi bi-pencil-fill"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="deleteCustomer(@customer.Id)">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
