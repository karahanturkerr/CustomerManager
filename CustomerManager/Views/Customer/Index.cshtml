@model List<CustomerManager.Entities.Models.Customer>
@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h2 class="mb-4">Müşteriler</h2>


<div class="d-flex justify-content-between align-items-center mb-3">
    <button type="button" id="addCustomerButton" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addModal">
        <i class="bi bi-person-plus"></i> Yeni Müşteri Ekle
    </button>

    <div class="d-flex align-items-center">
        <label class="form-check-label me-2" for="statusSwitch">Aktif / Pasif</label>
        <div class="form-check form-switch m-0">
            <input class="form-check-input" type="checkbox" id="statusSwitch">
        </div>
    </div>
</div>

